---
  const user = {
    name: "María García",
    email: "maria@example.com",
    avatarUrl: "https://avatar.iran.liara.run/username?username=Maria+Garcia",
    balance: 5280.50,
    lastTransaction: {
      amount: 150.75,
      date: "2023-12-28",
      description: "Compra en Supermercado XYZ"
    }
  }

---
<section class="flex flex-col gap-6 ">

<h3 class="py-2 text-3xl font-bold">Bienvenido {user.name}</h3>
<div class="shadow-md px-4 py-3 rounded-md gap-8 flex w-[400px] md:w-[800px]  justify-between">
  <div class="flex flex-row gap-4">
    <div class="h-16 w-16">
      <img class="w-16 h-16" src={user.avatarUrl} alt={user.name} />
    </div>
    <div>
      <h1 class="text-2xl font-semibold">{user.name}</h1>
      <p class="text-sm text-gray-500 ">{user.email}</p>
    </div>
  </div>

  <div class=" flex flex-col gap-3">
    <h1 class="text-lg font-medium">Saldo Actual</h1>
    <p class="text-3xl font-bold">{user.balance}</p>

    <button class="flex py-3 px-4 bg-blue-500 rounded-md text-white">Ver detalles</button>
  </div>  
</div>

<div class="px-4 py-3 shadow-md rounded-md md:w-[800px] flex flex-col gap-4 ">

  <h3 class="text-lg font-medium ">Ultima transacion</h3>

  <div class="flex rounded rounded-gray-500 gap-2 justify-between">
   <div class="flex flex-col">
    <p class="font-medium">{user.lastTransaction.description}</p>
    <p class="text-sm text-gray-500">{user.lastTransaction.date}</p>
   </div>
    <div>
      <h1 class="text-xl font-bold">${user.lastTransaction.amount}</h1>
    </div>
  </div>
  <button class="flex py-3 px-4 bg-blue-500 rounded-md text-white w-fit ">Ver todas las transacciones</button>

</div>
</section>

